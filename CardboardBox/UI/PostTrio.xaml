<UserControl x:Class="CardboardBox.PostTrio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="Auto" Width="Auto">
    
<StackPanel Orientation="Horizontal">
									<Border x:Name="FirstBorder" Height="125" 
										BorderThickness="1" BorderBrush="Gray" Background="#80000000" Width="125" Margin="6">
										<Image x:Name="FirstImage" Source="{Binding First.PreviewUrl}" Stretch="UniformToFill" Tag="{Binding Path=First}"  />
									</Border>
									<Border x:Name="SecondBorder" Height="125" 
										BorderThickness="1" BorderBrush="Gray" Background="#80000000" Width="125" Margin="6">
										<Image x:Name="SecondImage" Source="{Binding Second.PreviewUrl}" Stretch="UniformToFill" Tag="{Binding Path=Second}" />
									</Border>
									<Border x:Name="ThirdBorder" Height="125" 
										BorderThickness="1" BorderBrush="Gray" Background="#80000000" Width="125" Margin="6">
										<Image x:Name="ThirdImage" Source="{Binding Third.PreviewUrl}" Stretch="UniformToFill" Tag="{Binding Path=Third}" />
									</Border>
</StackPanel>
</UserControl>